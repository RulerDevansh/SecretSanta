# Copy to .env (do NOT commit .env)
# Server
PORT=4000
MONGO_URI=mongodb+srv://<user>:<pass>@cluster.example/dbname
JWT_SECRET=replace_me_with_long_random_string
CLIENT_URLS=http://localhost:5173

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# SMTP (Brevo / Sendinblue)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_login_or_api
SMTP_PASS=your_brevo_smtp_key
SMTP_FROM="Secret Santa <no-reply@yourdomain.com>"
SMTP_SECURE=false
SMTP_DEBUG=false

# Feature flags
CORS_DISABLE=false
